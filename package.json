{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --no-cache --continue --concurrency=12",
    "dev:kitchensink": "turbo run dev --no-cache --scope='kitchensink' --continue",
    "dev:web": "turbo run dev --no-cache --scope='web' --continue",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "start": "turbo run start",
    "start:kitchensink": "turbo run start --scope='kitchensink'",
    "start:test": "turbo run start:test",
    "start:web": "turbo run start --scope='web'",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "type-check": "turbo run type-check"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,tsx,md,mdx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/**/*.{js,ts,tsx,md,mdx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "^3.6.3",
    "@types/eslint": "^8.21.3",
    "@types/prettier": "^2.7.2",
    "eslint": "^8.36.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "hygen": "^6.2.11",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.6",
    "prettier-config": "workspace:*",
    "turbo": "^1.8.5",
    "typesync": "^0.10.0"
  },
  "packageManager": "pnpm@7.25.0"
}
