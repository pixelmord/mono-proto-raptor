{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": ["NEXT_PUBLIC_SITE_URL", "NODE_ENV", "NEXT_PUBLIC_POCKETBASE_URL"]
    },
    "start": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "start:test": {
      "dependsOn": ["build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "test:e2e": {},
    "type-check": {
      "outputs": []
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
