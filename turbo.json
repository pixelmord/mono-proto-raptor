{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "NEXT_PUBLIC_SITE_URL",
        "NODE_ENV",
        "NEXT_PUBLIC_POCKETBASE_URL",
        "SECRET_COOKIE_PASSWORD",
        "SESSION_COOKIE_NAME"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "start:test": {
      "dependsOn": ["build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "test:e2e": {
      "env": ["BASE_URL"]
    },
    "type-check": {
      "outputs": []
    },
    "lint": {},
    "watch": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
